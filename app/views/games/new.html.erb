<div class="big-box d-flex flex-column m-4">
  <div>
    <h1 class="title">New game</h1>
  </div>
  <div class="box d-flex mt-4">
    <% @letters.shuffle.each do |letter| %>
      <div class="letter m-2"><%= letter %></div>
    <% end %>
  </div>
  <form action="/score" method="post" data-turbo="false" class="form">
    <p>What is the longest word you can find ?</p>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="d-flex">
      <input type="text" name="word" class="text">
      <input type="submit" class="btn-submit">
    </div>
  </form>
</div>
